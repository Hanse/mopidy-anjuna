@import 'nib'

@import url('http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700')

global-reset()

*
  box-sizing border-box
  font-smoothing antialiased

$header-height = 50px
$footer-height = 100px

a
  text-decoration none
  color #c0392b

  &:hover
    text-decoration underline

html, body
  width 100%
  height 100%

body
  font-size 1.2em
  line-height 1.5
  font-family 'Source Sans Pro', 'Helvetica Neue', Helvetica, sans-serif
  background #fff
  color #777
  position relative

header, aside, section, footer
  padding 0 1em

header
  height $header-height
  line-height @height
  background #eee

aside, section
  padding 1em

aside
  width 20%
  position absolute
  left 0
  bottom $footer-height
  top $header-height

section
  background #fff
  width 80%
  position absolute
  right 0
  bottom $footer-height
  top $header-height

footer
  background linear-gradient(#ddd, #ccc)
  text-align center
  position fixed
  bottom 0
  height $footer-height
  line-height $footer-height
  width 100%

  .controls
    line-height $footer-height
    height $footer-height

    button
      display inline-block
      margin 12px 5px 0 5px
      width 44px
      height @width
      line-height @height
      border-radius (@width/2)
      border 0
      background transparent
      font-size 22px
      text-shadow 0 0 2px #fff
      color #444
      cursor pointer
      outline none

      &:hover
        color #000


table
  width 100%
  border-collapse collapse
  font-size .9em

th
  color #666
  text-transform uppercase
  font-weight 700
  font-size .7em

tbody
  tr:hover
    background lighten(#eee, 10%)

td
  padding 5px 0
