@import 'nib'

@import url('http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700')

global-reset()

*
  box-sizing border-box
  font-smoothing antialiased
  user-select none

$header-height = 50px
$footer-height = 100px

@import 'playlists'
@import 'loaders'

::-webkit-scrollbar
  background white
  width 4px

::-webkit-scrollbar-thumb
  background #eee
  border-radius 1ex

a
  text-decoration none
  color #c0392b

  &:hover
    text-decoration underline

html, body
  width 100%
  height 100%

body
  font-size 1.2em
  line-height 1.5
  font-family 'HelveticaNeue-Light', Helvetica, sans-serif
  background #F2F2F0
  color #777
  position relative

header, aside, section, footer
  padding 0 1em

header
  height $header-height
  line-height @height
  background linear-gradient(#4D5259, darken(#4D5259, 10%))
  color #fff
  position fixed
  top 0
  left 0
  right 0
  z-index 10

aside, section
  padding 1em

aside
  width 20%
  position absolute
  left 0
  bottom $footer-height
  top $header-height

section
  background #fff
  width 80%
  position absolute
  right 0
  bottom $footer-height
  top $header-height
  overflow-y scroll

footer
  background linear-gradient(#ddd, #ccc)
  text-align center
  position fixed
  bottom 0
  background #D9D5D0
  width 100%
  display flex
  align-items center
  padding 20px

  img
    max-height 64px

  .controls
    button
      display inline-block
      width 44px
      border-radius (@width/2)
      border 0
      background transparent
      font-size 26px
      text-shadow 0 0 2px #fff
      color #4D5259
      cursor pointer
      outline none

      &:hover
        color #000

    input[type=range]
      appearance none
      background transparent
      margin-right 5px

      &::-webkit-slider-runnable-track
        background #F2F2F0
        border-radius 5px
        width 100px
        border none

      &::-webkit-slider-thumb
        appearance none
        border none
        background #4D5259
        height 16px
        width 16px
        border-radius 8px

      &:focus
        outline none


table
  width 100%
  border-collapse collapse
  font-size .9em

th
  color #666
  text-transform uppercase
  font-weight 700
  font-size .7em

tbody
  tr
    &:hover, &.active
      background lighten(#eee, 10%)

    td:first-child
      font-size 14px

td
  padding 5px 0

li, tr
  cursor default
