@import 'nib'
@import '~animate.css/animate.css'

@import url('http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700')

global-reset()

*
  box-sizing border-box
  font-smoothing antialiased
  user-select none

$header-height = 50px
$footer-height = 70px

@import 'App'
@import 'Loader'
@import 'Playlists'
@import 'PlayerControls'
@import 'Queue'
@import 'Tracklist'

::-webkit-scrollbar
  background transparent
  width 3px

::-webkit-scrollbar-thumb
  background #ddd
  border-radius 3px

a
  text-decoration none
  color #c0392b

  &:hover
    text-decoration underline

html, body
  width 100%
  height 100%
  overflow hidden // disable rubberband

body
  font-size 62.5%
  line-height 1.6
  font-family 'Helvetica Neue', Helvetica, sans-serif
  background #fff
  color #666
  position relative

header, aside, section, footer
  padding 0 1em

.scrollable
  overflow auto
  overflow-scrolling touch

.flex
  &-1
    width 20%
  &-4
    width 60%

.unplayable
  text-decoration line-through
  color #bbb

li, tr
  cursor default

.artist-name
 color #777

.cover-image
  position relative
  width 100%
  height 250px

  img
    position absolute
    width 100%

.fade-enter
  animation fadeInLeft .3s

.fade-leave-active
  animation fadeOutRight .3s

.opacity-enter
  animation fadeIn 1s

.opacity-leave
  animation fadeOut 1s
